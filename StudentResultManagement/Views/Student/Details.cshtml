@model dynamic






<div class="row p-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body bg-light">
                <h5 class="card-text">Id: @Model.Student.Roll</h5>
                <h5 class="card-text">Name: @Model.Student.Name</h5>
                    <h5 class="card-text">Name: @Model.Student.PhoneNo</h5>
                <h5 class="card-text">Series: @Model.Student.Series.SeriesName</h5>

            </div>
        </div>
    </div>
    


</div>

<div class="container">
    <div class="row mt-3">
        <div class="col-lg-12">



            <div class="card">
                <div class="card-body">
                    <h3 class="text-primary">Average GPA : @Model.AverageResult</h3>

                    <a asp-action="Index" asp-controller="Student" class="mt-2 btn btn-outline-primary">Go Back</a>

                </div>
            </div>

        </div>
    </div>
</div>

<div class="container">
<div class="row">
    @foreach (var item in Model.Semesters)
        {

  
        <div class="col-lg-6">


            <div class="card mt-4">
                <div class="card-body bg-light text-center">
                    <a class="display-5 card-link stretched-link" style="text-decoration:none"  asp-action="Semester" asp-route-student_id="@Model.Student.Id" asp-route-semester_id="@item.Id">@item.Name</a>

                 </div>
            </div>
        </div>

        }



</div>

</div>