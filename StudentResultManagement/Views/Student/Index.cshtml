@model IEnumerable<Students>


 <div class="row justify-content-center">
    
    
            <div class="col-lg-3 col-6">
              <div class="card text-light">
                  <div class="card-header bg-secondary">
                      <h6 class="card-text text-center">Search by Id or Series</h6>
                  </div>
               <div class="card-body d-block-inline">
                <form asp-action="Index" asp-controller="Student" method="get">
                    <div class="d-flex flex-row">
                        <div class="p-2">
                            <input class="form-control" type="text" name="searchString" value="@ViewBag.SearchString" />
                        </div>
                        <div class="p-2">
                            <input class="btn btn-primary" type="submit" value="Search" />
                        </div>
                        
                    </div>
                    
                    
                </form>
            </div>
        </div>
    </div>

  

    


   
</div>


@if (!String.IsNullOrEmpty(ViewBag.SearchString))
{

    <div class="col-lg-6 m-auto mt-4 mb-3 bg-primary">
        <div class="card text-center">
            <div class="card-header">
                <h6><i>Search results for: @ViewBag.SearchString</i></h6>
                <a asp-action="Index" class="card-link">Resest filter</a>
            </div>

            

                

            

        </div>

    </div>
}

else
{
    <div class="container col-lg-12 mt-4">
        
                <h4 class="text-center"><i>All Students Data</i></h4>
           







        </div>

    
}



<div class="Student-Data">
    
 <div class="container">
      

            <table class="table p-3 text-center table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>Roll</th>
                        <th>Name</th>
                        <th>Seies</th>
                        <th>
                            Edit | Details
                        </th>
                    </tr>
                </thead>
                <tbody>
                   
        @foreach (var item in Model)
        {
               

                    
                        <tr>
                        <td>@item.Roll</td>
                         <td>@item.Name</td>
                        <td>@item.Series.SeriesName</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Student" class="btn btn-primary" asp-route-id="@item.Id"><i class="fa-regular fa-pen-to-square"></i></a>
                            <a asp-action="Details" asp-controller="Student" class="btn btn-success" asp-route-id="@item.Id"><i class="fa-duotone fa-solid fa-circle-info"></i></a>
                        </td>
                        </tr>

                        
                  


          


        }

    </tbody>
    </table>

  


        
        
    </div>
    
</div>

