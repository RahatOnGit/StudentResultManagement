@model Result

<style>
    input{
        text-align: center;
    }
</style>
<div class="row">
    <div class="col-lg-6 m-auto">
        <div class="card text-center">

            <div class="card-header text-light bg-success">
                <h6>Student Id: @ViewBag.StudentRoll.Roll</h6>
                <h6>Course No: @ViewBag.CourseNo.CourseNo</h6>
            </div>

            <div class="card-body">
                <form asp-action="AddMarkofACourse" asp-route-returnUrl="@ViewBag.ReturnUrl" method="post">
                    <input type="hidden" asp-for="CourseId" value="@ViewBag.CourseId" />
                    <input type="hidden" asp-for="StudentId" value="@ViewBag.StudentId" />
                    <div class="form-group">
                        <div class="d-flex flex-row">
                            <div class="p-2">
                                
                                <input asp-for="CT1" class="form-control" required />
                                <span class="alert-danger" asp-validation-for="CT1" />
                                <p>CT-1</p>
                            </div>
                            <div class="p-2">
                               
                                <input asp-for="CT2"  class="form-control" required />
                                <span class="alert-danger"  asp-validation-for="CT2" />
                                <p>CT-2</p>
                            </div>
                            <div class="p-2">
                               
                                <input asp-for="CT3" class="form-control" required />
                                <span class="alert-danger"  asp-validation-for="CT3" />
                                <p>CT-3</p>
                            </div>
                            <div class="p-2">
                               
                                <input asp-for="CT4"  class="form-control" required />
                                <span class="alert-danger"   asp-validation-for="CT4" />
                                <p>CT-4</p>
                            </div>
                        </div>
                        <hr/>
                        <div class="d-flex flex-row">
                            <div class="p-2">
                                <input asp-for="Attendence" class="form-control" required />
                                <span class="alert-danger"  asp-validation-for="Attendence" />
                                <p>Attendance</p>
                            </div>

                            <div class="p-2">
                                <input asp-for="Final"   class="form-control" required />
                                <span class="alert-danger"  asp-validation-for="Final" />
                                <p>Final</p>
                            </div>
                        </div>
                    </div>
                   

                    <div class="form-group">
                        <input class="mt-3 btn btn-block btn-success" style="width: 100%;" type="submit" value="Add Mark" />

                    </div>
                </form>
            </div>

        </div>
    </div>
</div>



