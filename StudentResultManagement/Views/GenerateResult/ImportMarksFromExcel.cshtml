@{
    string  success = TempData["Message"] as string;
}


@if (success == "ok")
{
    <div class="alert alert-success alert-dismissible container text-center col-lg-5" role="alert">
        <button class="btn-close"
                data-bs-dismiss="alert"
                aria-label="close">
        </button><h6>Marks Added Successfully!</h6>
        <hr />
        <p>Click <a asp-controller="GenerateResult" asp-action="Index">here</a> to generate result.</p>

        
    </div>

}

<div class="col-lg-5 mt-5 justify-content-center m-auto">
    <div class="card">
        <div class="card-body">
           
            <h3 class="text-center">Add Marks from excel sheet</h3>
            <hr />
            <form method="post" asp-controller="GenerateResult" asp-action="ImportMarksFromExcel"
                  enctype="multipart/form-data">


                <div class="form-group mt-2">
                    <select id="selectCourse" name="CourseId" class="form-control" asp-items="@ViewBag.Courses" required>
                        <option value="">Select Course</option>
                    </select>
                </div>
 

            
               

                <div class="form-group mt-3">
                    <input type="file" name="file" accept=".xls,.xlsx" class="form-control" />

                </div>
                <div class="form-group">
                    <button type="submit" name="Upload" class="mt-3 btn btn-primary">Upload</button>

                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script type="text/javascript" src=" https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>



    <script type="text/javascript">
        $(function () {
           
            $("#selectCourse").select2();
        });

     

    </script>

 

}