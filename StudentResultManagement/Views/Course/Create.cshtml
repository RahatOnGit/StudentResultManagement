@model Course



<h2>Add New Course</h2>

<form asp-action="Create" method="post">

    <div class="form-group">
        <label asp-for="CourseNo" class="control-label"></label>
        <input asp-for="CourseNo" class="form-control" />
        <span asp-validation-for="CourseNo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CourseTitle" class="control-label"></label>
        <input asp-for="CourseTitle" class="form-control"/>
        <span asp-validation-for="CourseTitle" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="SemesterId" class="control-label"></label>
        <select asp-for="SemesterId" class="form-control" asp-items="ViewBag.Semesters"></select>
    </div>

    <div class="form-group mt-2">
        <button type="submit" class="btn btn-success">Submit</button>
        <a asp-action="Index" class="btn btn-secondary">Back to list</a>

    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
