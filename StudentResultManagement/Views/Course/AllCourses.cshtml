@model IEnumerable<Course>

@{
    var SemesterId = ViewBag.SemesterId;
    var SemesterName = ViewBag.SemesterName;

    string str = Context.Request.Path;
    
    string str1 = "?semesterName=" + SemesterName + "&semesterId=" + SemesterId;
    str += str1;


}

<br />
<div class="row">
    <div class="col-12">
        <h2 class="text-center">@SemesterName Semester </h2>
    </div>
    <hr/>
</div>

<div class="col-6 text-right">
    <a asp-action="Create" asp-route-returnUrl="@str" asp-route-SemesterName="@SemesterName" asp-route-SemesterId="@SemesterId" class="btn btn-info"><i class="fa-solid fa-plus"></i>&nbsp; New Course</a>
</div>

<div class="mt-5">

    <div class="row">


        @foreach (var item in Model)
        {
            <div class="col-lg-3">
                <div class="card bg-light  text-center mt-5">
                    <div class="card-body">
                        <h4 class="text-success">@item.CourseNo</h4>
                        <p>@item.CourseTitle</p>
                        <p>Credit: <b>@item.Credit</b></p>
                        <a asp-action="Edit" asp-route-SemesterName="@SemesterName" asp-route-SemesterId="@SemesterId" asp-route-returnUrl="@str" asp-controller="Course" class="btn btn-primary" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Delete" asp-route-SemesterName="@SemesterName" asp-route-SemesterId="@SemesterId" asp-route-returnUrl=" @str" asp-controller="Course" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>


                    </div>


                </div>

            </div>
        }

    </div>
</div>



