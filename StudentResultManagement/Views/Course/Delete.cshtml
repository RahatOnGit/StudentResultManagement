@model Course


<h2>Delete Product</h2>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="@Model.Id" />

    <div class="form-group">
        <label asp-for="CourseNo" class="control-label"></label>
        <input asp-for="CourseNo" class="form-control" />
        <span asp-validation-for="CourseNo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CourseTitle" class="control-label"></label>
        <input asp-for="CourseTitle" class="form-control" />
        <span asp-validation-for="CourseTitle" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label>Semester ID</label>
        <input class="form-control" readonly="readonly" value="@Model.Semester.Name" />
    </div>

    <div class="form-group mt-2">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to list</a>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
